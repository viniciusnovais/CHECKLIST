<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:id="@+id/tvForm"
            android:layout_marginLeft="2dp"
            android:text="Form: "/>
        <Spinner
            android:id="@+id/spinnerForm"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:background="@drawable/border_appointmentbook" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPeriodo"
            android:textSize="18dp"
            android:layout_marginLeft="18dp"
            android:text="PerÃ­odo: "/>
        <Spinner
            android:id="@+id/spinnerPeriodo"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:background="@drawable/border_appointmentbook"
            />
    </LinearLayout>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ListView
        android:id="@+id/listViewAppointment"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="0dp"
        android:divider="@null"
        >
    </ListView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatAction"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_add_circle_black_24dp"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content" />

    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>